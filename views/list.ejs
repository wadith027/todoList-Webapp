<%- include("header") -%>
    <div id="heading" class="box">
        <h1 > <%= listTitle %></h1>
    </div>
    <div class="box">
        <% for(var i = 0; i<newListItems.length; i++){ %>
        <form action="/delete" method="post">
            <div class="item">          
                <input onChange="this.form.submit()" type="checkbox" name= "checkbox" value= <%= newListItems[i]._id %> >
                <p> <%= newListItems[i].name %></p>                  
                <input type="hidden" name="listName" value= <%= listTitle %> >
            </div>
        </form>
        <% } %>
           <form class="item" action="/" method="post">
               <input placeholder="New Item" type="text" name="newItem" autocomplete="off">
               <button type="submit" name="list" value="<%= listTitle %>">+</button>
           </form>
    </div>    
